{
    "configurations": {
        "Zodiac": {
            "adapter": "vscode-cpptools",
            "filetypes": [ "cpp", "c" ],
            "configuration": {
                "request": "launch",
                "program": "bin/zodiac",
                "args": [ "tests/simple.zc", "-v" ],
                "cwd": "${workspaceRoot}",
                "environment": [],
                "externalConsole": false,
                "MIMode": "gdb"
            }
        },
        "Zodiac Tests": {
            "adapter": "vscode-cpptools",
            "filetypes": [ "cpp", "c" ],
            "configuration": {
                "request": "launch",
                "program": "bin/zodiac_tests",
                "args": [ "CL/Global_Constant_Without_Typespec" ],
                "cwd": "${workspaceRoot}",
                "environment": [],
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Following child process on fork",
                        "text": "set follow-fork-mode child"
                    }
                ]
            }
        }
    }
}
