
#run main();

S :: struct {
    _u64 : u64;
    _s64 : s64;
    _u32 : u32;
    _s32 : s32;
    _u16 : u16;
    _s16 : s16;
    _u8  :  u8;
    _s8  :  s8;

    _r64 : r64;
    _r32 : r32;

    _bool1 : bool;
    _bool2 : bool;

    _ptr_vec2 : *Vec2;

    _ss : SS;

    _bytes : [7]u8;

    // TODO: function (pointer)?
}

gs : S;

main :: () {

    print("Uninitialized global:");
    print_s(*gs);

    s : S;
    print("Uninitialized local:");
    print_s(*s);

    s._u64 = 9876;
    s._bytes = { 11, 22, 33, 44, 55, 66, 77 };
    print("Initialized local:");
    print_s(*s);

    return 0;
}

Vec2 :: struct {
    x, y: r64;
}

SS :: struct {
    id : u32;
    v  : Vec2;
}

print_s :: (s : *S) {
    print(s);
    print("{ ",
          s._u64, ", ",
          s._s64, ", ",
          s._u32, ", ",
          s._s32, ", ",
          s._u16, ", ",
          s._s16, ", ",
          s._u8,  ", ",
          s._s8,  ", ",

          s._r64,  ", ",
          s._r32,  ", ",

          s._bool1,  ", ",
          s._bool2,  ", ",

          s._ptr_vec2,  ", ",

          "{ ", s._ss.id, ", { ", s._ss.v.x, ", ", s._ss.v.y, " } }, ",

          s._bytes,

          " }");
}
