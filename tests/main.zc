
test :: (b: bool) {
    if b println("true");
    else println("false");
}

#run main();
main :: () {

    if 0 println("UNREACHABLE");
    else println("0 casts to false");

    if 1 println("1 casts to true");
    else println("UNREACHABLE");

    if -1 println("-1 casts to true");
    else println("UNREACHABLE");

    test(0);
    test(1);
    test(-1);

    return 0;
}

