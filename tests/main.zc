
#run main();

factorial_iterative :: (n: s64) {

    result := 1;

    for i := 1; i <= n; i += 1 {

        result *= i;
    }

    return result;
}

factorial_recursive :: (n: s64) {

    if n <= 1 return 1;

    return factorial_recursive(n - 1) * n;
}

main :: () {

    for i := 0; i < 22; i+=1 {

        fi := factorial_iterative(i);
        fr := factorial_recursive(i);

        print(i, ": ", fi, ", ", fr);

        if fi != fr println(" <--- !!!!!! MISMATCH !!!!!!");
        else println(" - match");
    }

    return 0;
}


