{
    "tasks": [
        {
            "type": "shell",
            "label": "Build zodiac_lib",
            "windows": {
                "command": "${workspaceFolder}/zodiac_lib/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/zodiac_lib/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/zodiac_lib"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": ""
        },
        {
            "type": "shell",
            "label": "Build zodiac_driver",
            "windows": {
                "command": "${workspaceFolder}/zodiac_driver/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/zodiac_driver/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/zodiac_driver"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/build_all.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/build_all.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}